<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:rotation="180"
            android:onClick="irInicio"
            app:srcCompat="@drawable/voltar" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:text="Cargo"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="42dp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="338dp"
                android:layout_height="50dp"
                android:layout_below="@id/textView101"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textshape"
                android:clickable="false"
                android:cursorVisible="false"

                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/textView102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText1"
                android:layout_marginStart="24dp"
                android:text="Email" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText2"
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView102"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText2"
                android:layout_marginStart="24dp"
                android:text="Requisitos" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText3"
                android:layout_width="338dp"
                android:layout_height="60dp"
                android:layout_below="@id/textView103"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText3"
                android:layout_marginStart="24dp"
                android:text="Experiência necessária" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText4"
                android:layout_width="338dp"
                android:layout_height="60dp"
                android:layout_below="@id/textView104"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText4"
                android:layout_marginStart="24dp"
                android:text="Formação desejada" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText5"
                android:layout_width="338dp"
                android:layout_height="60dp"
                android:layout_below="@id/textView105"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText5"
                android:layout_marginStart="24dp"
                android:text="Período" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText6"
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView106"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText6"
                android:layout_marginStart="24dp"
                android:text="Local" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText7"
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView107"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <TextView
                android:id="@+id/textView108"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText7"
                android:layout_marginStart="24dp"
                android:text="Salário" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/editText8"
                android:layout_width="338dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView108"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:background="@drawable/textshape"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goInitiateChat"
                android:layout_below="@id/editText8"
                android:text="@string/iniciar_chat" />
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>